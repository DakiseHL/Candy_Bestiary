<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".pantallaMobScroll">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/mobUno"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:src="@drawable/mob1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mobDos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/mobDos"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop"
        android:src="@drawable/mob2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mobTres"
        app:layout_constraintStart_toEndOf="@+id/mobUno"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mobTres"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop"
        android:src="@drawable/mob3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mobCuatro"
        app:layout_constraintStart_toEndOf="@+id/mobDos"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mobCuatro"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop"
        android:src="@drawable/mob4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mobCinco"
        app:layout_constraintStart_toEndOf="@+id/mobTres"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mobCinco"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:scaleType="centerCrop"
        android:src="@drawable/mob5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>